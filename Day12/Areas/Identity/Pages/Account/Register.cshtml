<div class="row justify-content-center">
    <div class="col-md-4 mt-5">
        <div class="card shadow border-secondary">
            <div class="card-body">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Firstname" class="form-control" autocomplete="Firstname" aria-required="true" />
                <label asp-for="Input.Firstname"></label>
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div> <hr/>
            <div class="form-floating">
                <input asp-for="Input.Lastname" class="form-control" autocomplete="Lastname" aria-required="true" />
                <label asp-for="Input.Lastname"></label>
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div> <hr/>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div><hr/>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div><hr/>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div><hr/>
            
            <div class="form-floating">
              
                @* <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select"  aria-required="true" >
                    <option disabled selected>Select Role</option> *@
                   

                <select asp-for="Input.Role" class="form-control" asp-items="@Model.Input.RoleList" class="form-select" aria-required="true" id="roleDropdown">
                    <option disabled selected>select role</option>
                @* </select> *@

                <span asp-validation-for="Input.Role" class="text-danger"></span>

                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        // Get the dropdown element
                        var roleDropdown = document.getElementById('roleDropdown');

                        // Loop through the options and disable the "admin" option
                        for (var i = 0; i < roleDropdown.options.length; i++) {
                            if (roleDropdown.options[i].text.toLowerCase() === 'admin') {
                                roleDropdown.options[i].disabled = true;
                            }
                        }
                    });
                </script>

                </select>
                <hr/>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Register</button>
        </form>
    </div>


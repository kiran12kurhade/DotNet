@model IEnumerable<Day12.Models.AddProducts>

@{
    ViewData["Title"] = "Available Products";
}


<hr/>
<div class="card-body text-center bg-white border-black mt-2"><h1>Available Products</h1></div>
<hr/>
<div class="row justify-content-center">
<div class="col-md-10 mt-5">
<div class="card shadow border-secondary">
<div class="card-body ">
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Specifiation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Summary)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Specifiation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Summary)
                </td>
                <td><pre> <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mt-5">Details</a>  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary mt-5">Edit</a>  <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mt-5">Delete</a> </pre>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <pre> <a asp-action="Create" class="btn btn-success mt-5">Add Product</a> </pre>
    </div>
</div>
</div>
</div>

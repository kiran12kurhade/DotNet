@model Day12.Models.AddProducts

@{
    ViewData["Title"] = "Edit Product";
}



<hr />
<div class="card-body text-center bg-white mt-2 border-secondary"><h1>Are you sure you want to edit this?</h1> </div>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-4 mt-4">
        <div class="card shadow border-secondary">
            <div class="card-body">
        <form asp-action="Edit">
                    <div class="align-content-center"><h4>Edit Product Details</h4></div>
                    <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label"></label>
                <input asp-for="Product_Name" class="form-control" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div> <hr/>
            <div class="form-group">
                <label asp-for="Product_Price" class="control-label"></label>
                <input asp-for="Product_Price" class="form-control" />
                <span asp-validation-for="Product_Price" class="text-danger"></span>
            </div> <hr/>
            <div class="form-group">
                <label asp-for="Product_Specifiation" class="control-label"></label>
                <input asp-for="Product_Specifiation" class="form-control" />
                <span asp-validation-for="Product_Specifiation" class="text-danger"></span>
            </div> <hr/>
            <div class="form-group">
                <label asp-for="Product_Summary" class="control-label"></label>
                <input asp-for="Product_Summary" class="form-control" />
                <span asp-validation-for="Product_Summary" class="text-danger"></span>
            </div><hr/>
            <div class="form-group">
                        <pre><a class=" btn btn-warning" asp-action="Index">Back to List</a>  <input type="submit" value="Save" class="btn btn-success" /></pre>
            </div>
                   

        </form>
    </div>
</div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Day12.Models.Feedback1

@{
    ViewData["Title"] = "Feedback Form";
}
<hr/>
<div class="card-body text-center bg-white border-black mt-2"><h1>Feedback Form </h1></div>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-4 mt-4">
        <div class="card shadow border-secondary">
            <div class="card-body">
        <form asp-action="Create">
                    <h4>Fill Feedback form </h4> <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><hr/>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div><hr/>
            <div class="form-group">
                <label asp-for="Mobile_Number" class="control-label"></label>
                <input asp-for="Mobile_Number" class="form-control" />
                <span asp-validation-for="Mobile_Number" class="text-danger"></span>
            </div><hr/>
            <div class="form-group">
                <label asp-for="Feedback" class="control-label"></label>
                <input asp-for="Feedback" class="form-control" />
                <span asp-validation-for="Feedback" class="text-danger"></span>
            </div><hr/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div><hr/>
        </form>
    </div>
</div>
</div>
</div>


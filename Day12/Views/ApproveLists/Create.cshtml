@model Day12.Models.ApproveList

@{
    ViewData["Title"] = "Approve Buyer Order";
}

<hr />
<div class="card-body text-center bg-white mt-2 border-secondary"><h1>Approve Buyer Order</h1> </div>
<hr />
<div class="row justify-content-center mt-2">
    <div class="col-md-4 mt-5">
        <div class="card shadow border-secondary">
            <div class="card-body ">
                <form asp-action="Create">
                    <h4>Fill Buyer Order</h4> <hr/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Buyer_Name" class="control-label"></label>
                        <input asp-for="Buyer_Name" class="form-control"/>
                        <span asp-validation-for="Buyer_Name" class="text-danger"></span>
                    </div><hr />
                    <div class="form-group">
                        <label asp-for="Product_Name" class="control-label"></label>
                        <input asp-for="Product_Name" class="form-control"/>
                        <span asp-validation-for="Product_Name" class="text-danger"></span>
                    </div><hr/>
                    <div class="form-group">
                        <label asp-for="Product_Price" class="control-label"></label>
                        <input asp-for="Product_Price" class="form-control"/>
                        <span asp-validation-for="Product_Price" class="text-danger"></span>
                    </div><hr/>
                    <div class="form-group">
                        <pre> <a class="btn btn-warning" asp-action="Index">Back to List</a> <input type="submit" value="Pay" class="btn btn-success" /></pre>
                    </div><hr/>
                </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>
</div>

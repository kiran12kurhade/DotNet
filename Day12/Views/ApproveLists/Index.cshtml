@model IEnumerable<Day12.Models.ApproveList>

@{
    ViewData["Title"] = "Index";
}
<hr />
<div class="card-body text-center bg-white border-black mt-2"><h1>Approve List Of Buyer Order</h1></div>
<hr />
<div class="row justify-content-center">
<div class="col-md-10 mt-5">
<div class="card shadow border-secondary">
<div class="card-body ">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buyer_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Price)
            </td>
            <td>
               @*  <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
               <pre><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>  <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> </pre>
               </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
